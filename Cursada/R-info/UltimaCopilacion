{ lopez 2024-11-25T20:56:07.359912700 }

programa ejemplo
procesos
  proceso juntarFlores(ES f: numero)
  comenzar
    mientras(HayFlorEnLaEsquina)
      tomarFlor
      f:= f + 1
  fin
  proceso Asignar
  comenzar
    EnviarMensaje(1,r1)
    EnviarMensaje(2,r2)
    EnviarMensaje(3,r3)
  fin
  proceso continuen
  comenzar
    EnviarMensaje(V,r1)
    EnviarMensaje(V,r2)
    EnviarMensaje(V,r3)
  fin
  proceso cuadrado (ES f: numero)
  variables
    ok: boolean
  comenzar
    repetir 4
      repetir 5
        mover
        juntarFlores(f)
      derecha
      EnviarMensaje(V,rc)
      RecibirMensaje(ok,rc)
  fin
  proceso accion(E av: numero; E ca: numero; E f: numero)
  comenzar
    repetir f
      BloquearEsquina(10,10)
      Pos(10,10)
      depositarFlor
      Pos(av,ca)
      LiberarEsquina(10,10)
  fin
areas
  area1: AreaP (1,1,6,6)
  area2: AreaP (7,1,12,6)
  area3: AreaP (13,1,18,6)
  esq: AreaPC (10,10,10,10)
  esqC: AreaP (20,1,20,1)
robots
  robot trabajador
  variables
    id, f, av,ca: numero
    gane: boolean
  comenzar
    RecibirMensaje(id,rc)
    f:= 0
    cuadrado(f)
    EnviarMensaje(id,rc)
    EnviarMensaje(f,rc)
    RecibirMensaje(gane,rc)
    si (gane = F)
      av:= PosAv
      ca:= PosCa
      accion(av,ca,f)
  fin
  robot coordinador
  variables
    aux, ganador,id, max: numero
    ok: boolean
  comenzar
    Asignar
    repetir 4
      repetir 3
        RecibirMensaje(ok, *)
      continuen
    max:= 0
    ganador:= 0
    repetir 3
      RecibirMensaje(id,*)
      si (id = 1)
        RecibirMensaje(aux,r1)
      sino
        si (id = 2)
          RecibirMensaje(aux,r2)
        sino
          si (id = 3)
            RecibirMensaje(aux,r3)
      si (aux > max)
        max:= aux
        ganador:= id
    si (ganador = 1)
      EnviarMensaje(V,r1)
      EnviarMensaje(F,r2)
      EnviarMensaje(F,r3)
    sino
      si (ganador = 2)
        EnviarMensaje(F,r1)
        EnviarMensaje(V,r2)
        EnviarMensaje(F,r3)
      sino
        si (ganador = 3)
          EnviarMensaje(F,r1)
          EnviarMensaje(F,r2)
          EnviarMensaje(V,r3)
        sino
          si (ganador = 0)
            EnviarMensaje(F,r1)
            EnviarMensaje(F,r2)
            EnviarMensaje(F,r3)
    Informar('el ganador fue ' , ganador)
  fin
variables
  r1,r2,r3: trabajador
  rc: coordinador
comenzar
  AsignarArea(r1, esq)
  AsignarArea(r2, esq)
  AsignarArea(r3, esq)
  AsignarArea(r1, area1)
  AsignarArea(r2, area2)
  AsignarArea(r3, area3)
  AsignarArea(rc, esqC)
  Iniciar(r1, 1,1)
  Iniciar(r2, 7,1)
  Iniciar(r3, 13,1)
  Iniciar(rc, 20,1)
fin
